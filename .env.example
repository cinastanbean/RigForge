# =========================
# RigForge Environment File
# =========================
# Copy this file to .env and fill in real keys.

# ----- Model Providers -----
ZHIPU_API_KEY=add-your-own-key-here
ZZHIPU_MODEL=GLM-4-Flash # faster than GLM-4.7-FlashX 
# ZHIPU_MODEL=GLM-4.7-FlashX # too slow
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4/

OPENROUTER_API_KEY=add-your-own-key-here
OPENROUTER_MODEL=openrouter/free
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

OPENAI_API_KEY=add-your-own-key-here
OPENAI_MODEL=gpt-4o

# ----- LLM Runtime -----
LLM_TIMEOUT_SECONDS=12
LLM_MAX_RETRIES=0
LLM_MIN_INTERVAL_SECONDS=1.2
LLM_TURN_TIMEOUT_SECONDS=30
LLM_PROVIDER_PROBE_TIMEOUT_SECONDS=10
LLM_PROVIDER_FAIL_COOLDOWN_SECONDS=120

# ----- Session Store -----
SESSION_STORE=sqlite
SESSION_REDIS_URL=redis://127.0.0.1:6379/0
SESSION_TTL_SECONDS=604800
SESSION_CLEANUP_INTERVAL_SECONDS=3600
